export

bootstrap:
	mkdir -p $(PKG_ID)/solaris
	cd $(PKG_ID)/solaris && $(REBAR) -v create \
                              template_dir=$(DEPS_DIR)/node_package/priv/templates \
                              template_vars=$(BASE_DIR)/pkg.vars.config template=solaris
	$(MAKE) -C $(PKG_ID) -f solaris/Makefile
